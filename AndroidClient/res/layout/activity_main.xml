<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_header_height">

        <Spinner
                android:id="@+id/switcher"
                android:layout_width="@dimen/main_header_switcher_width"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="start"
                android:gravity="center"
                android:entries="@array/switcher"/>

        <Button
                android:id="@+id/add_template"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/add_template"
                android:onClick="addTemplate"/>
    </RelativeLayout>

    <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

</LinearLayout>

