<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="2"
                  android:orientation="horizontal">

        <EditText android:id="@+id/agent_name"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:hint="@string/agent_name"/>

        <Button android:id="@+id/create_agent_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/create_agent"
                android:onClick="createAgent"/>

    </LinearLayout>

    <Button android:id="@+id/get_template_list_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/get_template_list"
            android:onClick="getAvailableTemplate"/>

    <edu.fudan.se.crowdservice.view.TemplateListView
            android:id="@+id/template_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>

